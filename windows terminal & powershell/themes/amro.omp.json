{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\ueb99  {{ .UserName }} <#ffffff>on</>",
          "foreground": "#89B4FA",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "template": " {{ path (abbrev 30 .Path) .Location }} ",
          "foreground": "#F5C2E7",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "{{ .UpstreamIcon }} {{ .HEAD }}{{ if .Working.Changed }}<#CC6B49> {{ .Working.String }}</>{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "#ee79d1",
          "powerline_symbol": "\ue0b0",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "template": "$ ",
          "foreground": "#A9FFB4",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ef5350{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "pwd": "osc7"
}
